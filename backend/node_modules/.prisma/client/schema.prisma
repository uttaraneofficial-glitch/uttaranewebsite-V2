// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model SiteContent {
  key       String   @id
  value     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("site_content")
}

model Candidate {
  id              String   @id @default(uuid())
  name            String
  college         String?
  branch          String?
  graduationYear  Int?
  roleOffered     String?
  packageOffered  String?
  profileImageUrl String?
  quote           String?
  linkedinUrl     String?
  companyId       String
  company         Company  @relation(fields: [companyId], references: [id])
  video           Video[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("candidates")
}

model Video {
  id          String     @id @default(uuid())
  companyId   String
  company     Company    @relation(fields: [companyId], references: [id])
  youtubeId   String?
  title       String
  roundType   String?
  publishedAt DateTime?
  thumbnail   String?
  candidateId String?
  candidate   Candidate? @relation(fields: [candidateId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("videos")
}

model Company {
  id         String      @id @default(uuid())
  name       String      @unique
  slug       String      @unique
  logoUrl    String?
  shortBio   String?
  orderIndex Int?
  thumbnail  String?
  bannerUrl  String?
  videos     Video[]
  candidates Candidate[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("companies")
}

model NgoPost {
  id        String   @id @default(uuid())
  imageUrl  String
  caption   String?
  postedAt  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ngo_posts")
}

model MkStudioPost {
  id          String   @id @default(uuid())
  youtubeId   String
  title       String
  description String?
  publishedAt DateTime @default(now())
  thumbnail   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("mkstudio_posts")
}

model ContactMessage {
  id        String   @id @default(uuid())
  fullName  String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_messages")
}

enum Role {
  ADMIN
  USER
}
